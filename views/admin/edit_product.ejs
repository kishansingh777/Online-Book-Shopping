  <div class="heading-container">
  <h2 class="page-title">Edit a product</h2>
<a href="/admin/products" class="btn btn-primary">Back to all products</a>
<br><br>
</div>

<form method="post" name="myform" action="/admin/products/edit-product/<%= id %>"  onsubmit="return(validation())" enctype="multipart/form-data">
    
    
    <div class="form-group">
        <label for="">Price</label>
        <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Price">
    </div>

    <div class="form-group">
        <label for="">Quantity</label>
        <input type="text" class="form-control" name="quantity" value="<%= quantity %>" placeholder="quantity">
    </div>
    
    <div class="form-group">
      <label for="">Category</label>
      <select name="category" class="form-control">
          <% categories.forEach(function(cat){ %>
              <option value="<%= cat.slug %>"
              <% if (cat.slug == category) { %>
              selected="selected"
              <% } %>        
              ><%= cat.title %></option>
          <% }); %>
      </select>
  </div>
    
    <button class="add_category_Submit">Submit</button>
</form>




<script>
      var error =document.getElementById('error')
      var error1 =document.getElementById('error1')
   function validation(){
   let a=document.forms["myform"]["price"].value;
   let b=document.forms["myform"]["quantity"].value;
   let x=a.trim();
   let y=b.trim();
   let message1="Input Box is empty";
   let message3="Please reduce the input size ";
      let errorcount=0;
   if(x=="" || y==""){
            error.style.display="inline-block";
            document.getElementById('error').innerHTML=message1;

            errorcount++;


         }
         else {
             error.style.display="none";
         }
         
         if(x.length>6 || y.length>5){
          error1.style.display="block";
            document.getElementById('error1').innerHTML=message3;

            errorcount++;
         }
         else {
             error1.style.display="none";
         }
        

         if(errorcount==0){
          return true;
        }
        else {
          return false;
        }
        }

</script>