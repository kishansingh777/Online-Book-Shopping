 <!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Books</title>

  <link rel="stylesheet" href="/home/admin.css">
 
  <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@300;500&family=Poppins:ital,wght@0,100;0,200;0,300;0,700;1,100&display=swap" rel="stylesheet">
  <style>
    .nav-link-product{
    color: white;
    border-width: 0 0 1px 0;
    border-style: solid;
    border-color: white;
  }
  </style>
</head>

<body>

  <div class="welcome-msg">
    <p>Welcome to our store</p>
  </div>
  <nav>
    <div class="nav-1">
      
      <a href="/admin/admin_index" class="home-link">
        <h1 class="home-title-heading">Booksella</h1>
      </a>
      <a href="/login"> <img src="https://cdn-icons-png.flaticon.com/512/5509/5509597.png" alt="" class="user-icon"></a>

    </div>
    <div class="nav-2">
      <ul class="nav-link">
        <li><a href="/admin/admin_index" >Home</a></li>
        <li><a href="/admin/products" class="nav-link-product"> Product</a></li>
        <li><a href="/admin/category">Category</a></li>
        
       
      </ul>
    </div>

  </nav>




  <div class="heading-container">
  <h2 class="page-title">Products</h2>
<a href="/admin/products/add-product" class="btn">Add a new product</a>
<br><br>
</div>

 
<table class="product-table">
    <thead>
        <tr class="home">
            <th>Product</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Quantity</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product){ %>
        <tr>
            <td><%= product.title %></td>
            <td>Rs. <%= product.price %></td>
            <td><%= product.category %></td>
            <td>
               
                <img id="product-image" src="/product_images/<%= product._id %>/<%= product.image %>">
                
            </td>
            <td><%= product.quantity %></td>
            <td><a href="/admin/products/edit-product/<%= product._id %>">Edit</a></td>
            <td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %>">Delete</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>
 

 