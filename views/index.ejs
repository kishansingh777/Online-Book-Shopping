    </div>
    <div class="mySlides fade">
      <img src="/home/top-authors-banner.jpg  " style="width:100%">
    </div>
  </section>




  <!-- best Seller -->
  <section class="best-seller">
    <% categories.forEach(function(category){ %>
      <% if(category.title =="Fiction") {%> 
    <h1 class="best-seller-heading">Fiction</h1>
    <hr>
    <div class="best-seller-books">
      <% products.forEach(function(product){ %>
       <% if(product.category=="fiction") {%> 
      <div class="book-1">
        <a href="/product_details/<%= product.category %>/<%= product.slug %>">
          <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="img1">
        </a>
        <p><a href="/product_details/<%= product.category %>/<%= product.slug %>"><%= product.title %></a></p>
        <p class="cost"><%= parseFloat(product.price).toFixed(2) %></p>

        
         <a href="/cart/add/<%= product.slug %>" class="cart-icon-link">
          <img src="https://cdn-icons-png.flaticon.com/512/2832/2832495.png" alt="" class="cart-icon-bestseller">
        </a> 
        

      </div> 
      <% } %>
      <% }); %>
    </div>
 
    <% } %>
    <% }); %>
  </section>


  <!--fiction-and-non-fiction- -->
  <section class="best-seller">
    <% categories.forEach(function(category){ %>
      <% if(category.title =="Non Fiction") {%> 
    <h1 class="best-seller-heading"> NON FICTION</h1>
    <hr class="fiction">
    <div class="best-seller-books">
      <% products.forEach(function(product){ %>
       <% if(product.category=="non-fiction"   ) {%> 
      <div class="book-1">
        <a href="/product_details/<%= product.category %>/<%= product.slug %>">
          <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="img1">
        </a>
        <p><a href="/product_details/<%= product.category %>/<%= product.slug %>"><%= product.title %></a></p>
        <p class="cost"><%= parseFloat(product.price).toFixed(2) %></p>

        
         <a href="/cart/add/<%= product.slug %>" class="cart-icon-link">
          <img src="https://cdn-icons-png.flaticon.com/512/2832/2832495.png" alt="" class="cart-icon-bestseller">
        </a> 
        

      </div> 
      <% } %>
      <% }); %>
    </div>
 
    <% } %>
    <% }); %>
  </section>





  
  <div class="school-book-logo">
    <img src="/home/offer-templete.jpg" alt="">
  </div>

  <section class="best-seller">
    <% categories.forEach(function(category){ %>
      <% if(category.title =="Student") {%> 
    <h1 class="best-seller-heading">Student Books</h1>
    <hr>
    <div class="best-seller-books">
      <% products.forEach(function(product){ %>
       <% if(product.category=="student") {%> 
      <div class="book-1">
        <a href="/product_details/<%= product.category %>/<%= product.slug %>">
          <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="img1">
        </a>
        <p><a href="/product_details/<%= product.category %>/<%= product.slug %>"><%= product.title %></a></p>
        <p class="cost"><%= parseFloat(product.price).toFixed(2) %></p>

        <div class="cart-icon-container1 add-cart"><!-- Cart Hover -->
          <img src="/home/cart-icon.png" alt="" class="cart-icon-bestseller">
