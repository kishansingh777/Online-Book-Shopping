<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Details</title>
    <link rel="stylesheet" href="/home/index.css">
    <script src="/home/main.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@300;500&family=Poppins:ital,wght@0,100;0,200;0,300;0,700;1,100&display=swap" rel="stylesheet">
    
  

    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@300;500&family=Poppins:ital,wght@0,100;0,200;0,300;0,700;1,100&display=swap" rel="stylesheet">
  
</head>

<body>
  <div class="welcome-msg">
    <p>Welcome to our store</p>
  </div>
  <nav>
    <div class="nav-1">
      <img src="/home/search-icon.png" alt="" class="search-icon" onclick="showSearch()">
      <a href="/index" class="home-link">
        <h1 class="home-title-heading">Booksella</h1>
      </a>
      <a href="/cart" class="cart-count">Cart (
        <% if (typeof cart !== "undefined") { %>
          <%= cart.length %>
          <% } else {%>
          0
          <% } %>
      )</a>
     <a href="/profile"> <img src="/home/user-icon.png" alt="" class="user-icon"></a>

    </div>
    <div class="nav-2">
      <ul class="nav-link">
        <li><a href="/index" class="nav-link-home">Home</a></li>
        <li><a href="/categories_list">Categories</a></li>
        <li><a href="/contact">Contact Us</a></li>
        <li><a href="/wishlist">Wishlist</a></li>
      </ul>
    </div>
    <div class="search-box" id="search-box">
      <input type="text" name="psearch" value="" id="ps">
      <!--<label for="">Search</label>-->
 
    <a id="kish" onclick="searchp()" onclick="return(validation())"><img src="/home/search-icon.png" alt="" class="search-input-icon"  ></a> 
      <img src="/home/cancel-icon.png" alt="" class="cancel-input-icon" onclick="hideSearch()">
    </div>
  </nav>

    <div class="profile-container">
      <h1 class="account-info-title">Account Information</h1>
      <div class="profile-container-info">
        

        <% users.forEach((row) => { %>
          <% if(row.email==email.email) { %>
          
            <label class="user-name-lb user-info-label" for="name">Name</label><br>
            <p class="user-name user-account-info"><%= row.name %></p><br><br>
        
      
            <label class="user-email-lb user-info-label" for="email">

                 Email 
              </label><br>
              <p for="" class="user-email user-account-info" ><%= row.email %></p><br><br>
          
           
          
            <label class="user-number-lb user-info-label" for="number">
                Number 
              </label><br>
              <p class="user-number user-account-info"><%= row.number %></p>

        
        <% } %>
        <% }) %>

       
      </div>

      <div class="view">
        <a href="/logout" class="best-seller-viewall">Log Out</a>
      </div>
    </div>
    

  
    <div class="admin-index-heading-container">
      <h1>Your Order</h1>
   
   
    </div>
  
  
     
    <table class="admin-product-table">
      <thead>
          <tr class="home">
              <th>Product</th>
              <th>Quantity</th>
               
              <th>Order Id</th>
              <th>Email</th>
              <th>Address</th>
              <th>Order Status</th>
              <th>Payment Mode</th>
             
          </tr>
      </thead>
  
   <tbody>
          <% order.forEach(function(Order){ %>
            <% if(Order.email==email.email) { %>
          <tr>
              <td>
                <% Order.product.forEach(function(product){ %>
                
                  <p><%=  product.title %></p>
                  
                <% }); %>
              </td>
              <td>
                <% Order.product.forEach(function(product){ %>
                
                  <p>Qty-<%= product.Qty %></p>
                  
                <% }); %>
              </td>
              <td> <%= Order.orderId %></td>
              <td><%= Order.email%></td>
              <td>
                 <% Order.Address.forEach(function(addr){ %>
                <p><%= addr.street%>,<%= addr.city%>,<%= addr.zip%>,<%= addr.state%>,<%= addr.country%></p>
                   
                  <% }); %>
              </td>
              <td><%= Order.paymentstatus%></td>
                 <td>  <%= Order.paymentmode%></td>
          </tr>
          <% } %>

          <% }); %>
      </tbody>
  </table>


  <%- include('layouts/footer') %>

 
   <!-- search and cancel -->
   <script type="text/javascript">
    var search = document.getElementById("search-box");

    function showSearch() {
      search.style.display = "block";
    }

    function hideSearch() {
      search.style.display = "none";
    }
  </script>
</body>
</html>